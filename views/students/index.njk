{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container students">
        <a class="new" href="/students/create">New Student</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Email</th>
                    <th>Grade</th>
                    <th>Academic Load</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}
                            <br>
                        </td>
                        <td>{{student.email}}</td>
                        <td>{{student.grade}}</td>
                        <td>{{student.academicload}}
                            hrs</td>
                        <td>
                            <a href="/students/{{student.id}}">View</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock content %}