{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class='image-container'></section>
        <section class='details'>
            <h3>New teachers</h3>
            <div class="item">
                <div>Avatar url</div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
            <div class="item">
                <div>Name</div>
                <input type="text" name="name" placeholder="Enter your name">
            </div>
            <div class="item">
                <div>Birth date</div>
                <input type="date" name="birth">
            </div>
            <div class="item">
                <div>Education level</div>
                <select name="degree" id="">
                    <option value="hs">High School</option>
                    <option value="bd">Bachelors Degree</option>
                    <option value="">Master's Degree</option>
                    <option value="">Doctorete Degree</option>
                </select>
            </div>
            <div class="item">
                <div>Classroom</div>
                <span><input type="radio" value="O" name="classroom">ONLINE</span>
                <span><input type="radio" value="P" name="classroom">PRESENCIAL</span>
            </div>
            <div class="item">
                <div>Knowedge</div>
                <input type="text" name="knowedge" placeholder="Enter your area of expertise separated by commas">
            </div>
            <div class="btn">
                <button type="submit">Save</button>
            </div>

        </section>

    </form>
{% endblock content %}