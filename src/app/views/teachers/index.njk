{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <a class="new" href="/teachers/create">New teacher</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Knowledges</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                            <br>
                        </td>
                        <td>
                            {{teacher.knowledge}}
                        </td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">View</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock content %}