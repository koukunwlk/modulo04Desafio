<div class="item">
    <div>Avatar url</div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
</div>
<div class="item">
    <div>Name</div>
    <input type="text" name="name" placeholder="Enter your name" value="{{teacher.name}}">
</div>
<div class="item">
    <div>Birth date</div>
    <input type="date" name="birth" value="{{teacher.birth}}">
</div>
<div class="item">
    <div>Education level</div>
    <select name="degree" id="">
        <option value="hs" {% if teacher.degree =="hs"%} selected="selected" {%endif%}>High School</option>
        <option value="bd" {% if teacher.degree =="bd"%} selected="selected" {%endif%}>Bachelors Degree</option>
        <option value="md" {% if teacher.degree =="md"%} selected="selected" {%endif%}>Master's Degree</option>
        <option value="dd" {% if teacher.degree =="dd"%} selected="selected" {%endif%}>Doctorete Degree</option>
    </select>
</div>
<div class="item">
    <div>Classroom</div>
    <span><input type="radio" value="online" name="classroom" {% if teacher.classroom == "online" %} checked="checked" {% endif %}>ONLINE</span>
    <span><input type="radio" value="presential" name="classroom" {% if teacher.classroom == "presential" %} checked="checked" {% endif %}>PRESENTIAL</span>
</div>
<div class="item">
    <div>knowledge</div>
    <input type="text" name="knowledge" placeholder="Enter your area of expertise separated by commas" value="{{teacher.knowledge}}">
</div>